<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_senator_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingTop="10dp"
        android:textColor="@color/dialog_senator_name"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/dialog_senator_image"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:contentDescription="@string/senator_image_desc"
        android:gravity="center"
        android:maxHeight="275dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="0dp"
        android:paddingStart="30dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_senator_party_state_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_text_party_state"
                android:textColor="@color/dialog_senator_party_state"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dialog_senator_state_party"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingLeft="7dp"
                android:paddingRight="0dp"
                android:paddingStart="7dp"
                android:textColor="@color/dialog_senator_party_state"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_senator_vote_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_text_vote"
                android:textColor="@color/dialog_senator_vote"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dialog_senator_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingLeft="7dp"
                android:paddingRight="0dp"
                android:paddingStart="7dp"
                android:textColor="@color/dialog_senator_vote"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
